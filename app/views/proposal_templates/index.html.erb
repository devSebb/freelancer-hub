<div>
  <!-- Page Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="text-4xl font-bold text-white tracking-tight"><%= t("proposal_templates.title") %></h1>
      <p class="mt-2 text-white/50"><%= t("proposal_templates.subtitle", default: "Save and reuse your proposal content") %></p>
    </div>
    <%= link_to new_proposal_template_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      <%= t("proposal_templates.new_template") %>
    <% end %>
  </div>

  <% if @templates.any? %>
    <div class="space-y-3">
      <% @templates.each do |template| %>
        <%= link_to edit_proposal_template_path(template), class: "block group" do %>
          <div class="bg-white/5 border border-white/10 rounded-2xl p-5 hover:bg-white/10 hover:border-white/20 transition-all duration-200">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-white group-hover:text-white truncate"><%= template.name %></h3>
                <p class="text-sm text-white/50 mt-1">
                  <%= t("proposal_templates.pricing_type") %>: <%= t("proposals.pricing_types.#{template.content['pricing_type'] || 'fixed'}") %>
                  <% if template.content["amount"].present? %>
                    <span class="text-white/30 mx-1">·</span>
                    <span class="text-emerald-400"><%= number_to_currency(template.content["amount"]) %></span>
                  <% elsif template.content["hourly_rate"].present? %>
                    <span class="text-white/30 mx-1">·</span>
                    <span class="text-emerald-400"><%= number_to_currency(template.content["hourly_rate"]) %>/hr</span>
                  <% end %>
                </p>
              </div>

              <div class="flex items-center gap-2 ml-4" onclick="event.stopPropagation();">
                <%= link_to new_proposal_path(template_id: template.id), class: "inline-flex items-center gap-1.5 px-3 py-1.5 bg-emerald-400/20 text-emerald-400 text-xs font-medium rounded-full hover:bg-emerald-400/30 transition-colors" do %>
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
                  </svg>
                  <%= t("proposal_templates.use_template") %>
                <% end %>
                <%= button_to proposal_template_path(template), method: :delete,
                    data: { turbo_confirm: t("proposal_templates.confirm_delete") },
                    class: "p-2 text-white/40 hover:text-red-400 transition-colors" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white/5 border border-white/10 rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto bg-white/10 rounded-2xl flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-white"><%= t("proposal_templates.no_templates") %></h3>
      <p class="mt-2 text-sm text-white/50 max-w-sm mx-auto"><%= t("proposal_templates.no_templates_description") %></p>
      <div class="mt-6">
        <%= link_to new_proposal_template_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
          </svg>
          <%= t("proposal_templates.create_first") %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
