<div>
  <!-- Page Header -->
  <div class="mb-10">
    <h1 class="text-4xl font-bold text-white tracking-tight"><%= t("dashboard.title") %></h1>
    <p class="mt-2 text-white/50"><%= t("dashboard.welcome", name: current_user.name || current_user.email) %></p>
  </div>

  <!-- Stats Grid -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3 mb-10">
    <!-- Outstanding Invoices -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-blue-400/20 rounded-xl flex items-center justify-center">
          <%= icon(:outstanding, variant: :duotone, size: :lg, css_class: "text-blue-400") %>
        </div>
        <div>
          <p class="text-sm text-white/50"><%= t("dashboard.outstanding_invoices") %></p>
          <p class="text-2xl font-bold text-white">$0.00</p>
        </div>
      </div>
    </div>

    <!-- Pending Proposals -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-amber-400/20 rounded-xl flex items-center justify-center">
          <%= icon(:pending, variant: :duotone, size: :lg, css_class: "text-amber-400") %>
        </div>
        <div>
          <p class="text-sm text-white/50"><%= t("dashboard.pending_proposals") %></p>
          <p class="text-2xl font-bold text-white">0</p>
        </div>
      </div>
    </div>

    <!-- Revenue This Month -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center">
          <%= icon(:trending, variant: :duotone, size: :lg, css_class: "text-accent") %>
        </div>
        <div>
          <p class="text-sm text-white/50"><%= t("dashboard.revenue_this_month") %></p>
          <p class="text-2xl font-bold text-white">$0.00</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white/5 border border-white/10 rounded-2xl p-8">
    <h2 class="text-xl font-semibold text-white mb-6">Quick Actions</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <%= link_to new_proposal_path, class: "group flex items-center gap-4 p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-all duration-200" do %>
        <div class="w-10 h-10 bg-accent/20 rounded-lg flex items-center justify-center group-hover:bg-accent/30 transition-colors">
          <%= icon(:new, css_class: "text-accent") %>
        </div>
        <div>
          <p class="font-medium text-white group-hover:text-accent transition-colors">New Proposal</p>
          <p class="text-sm text-white/40">Create a new proposal</p>
        </div>
      <% end %>

      <%= link_to new_invoice_path, class: "group flex items-center gap-4 p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-all duration-200" do %>
        <div class="w-10 h-10 bg-blue-400/20 rounded-lg flex items-center justify-center group-hover:bg-blue-400/30 transition-colors">
          <%= icon(:new, css_class: "text-blue-400") %>
        </div>
        <div>
          <p class="font-medium text-white group-hover:text-blue-400 transition-colors">New Invoice</p>
          <p class="text-sm text-white/40">Bill your clients</p>
        </div>
      <% end %>

      <%= link_to new_client_path, class: "group flex items-center gap-4 p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-all duration-200" do %>
        <div class="w-10 h-10 bg-purple-400/20 rounded-lg flex items-center justify-center group-hover:bg-purple-400/30 transition-colors">
          <%= icon(:new, css_class: "text-purple-400") %>
        </div>
        <div>
          <p class="font-medium text-white group-hover:text-purple-400 transition-colors">Add Client</p>
          <p class="text-sm text-white/40">Add a new client</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
