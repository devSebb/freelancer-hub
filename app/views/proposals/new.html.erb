<div>
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to proposals_path, class: "inline-flex items-center text-sm text-white/50 hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/>
      </svg>
      <%= t("common.back") %>
    <% end %>
  </div>

  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-white tracking-tight"><%= t("proposals.new_proposal") %></h1>
    <p class="mt-2 text-white/50">Create a new proposal for your client</p>
  </div>

  <% if @templates.any? %>
    <div class="mb-8 bg-emerald-400/10 border border-emerald-400/20 rounded-2xl p-5">
      <div class="flex items-start gap-4">
        <svg class="w-5 h-5 text-emerald-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
        </svg>
        <div class="flex-1">
          <p class="text-sm font-medium text-emerald-400"><%= t("proposal_templates.start_from_template") %></p>
          <div class="mt-3 flex flex-wrap gap-2">
            <% @templates.each do |template| %>
              <%= link_to template.name,
                  new_proposal_path(template_id: template.id, client_id: params[:client_id]),
                  class: "inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium transition-all duration-200 #{params[:template_id].to_s == template.id.to_s ? 'bg-emerald-400 text-black' : 'bg-white/10 text-white hover:bg-white/20'}" %>
            <% end %>
            <% if params[:template_id].present? %>
              <%= link_to t("proposal_templates.start_blank"),
                  new_proposal_path(client_id: params[:client_id]),
                  class: "inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-white/5 text-white/60 hover:bg-white/10 transition-all duration-200" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "form", proposal: @proposal %>
</div>
