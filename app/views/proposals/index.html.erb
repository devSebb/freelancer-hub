<div>
  <!-- Page Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="text-4xl font-bold text-white tracking-tight"><%= t("proposals.title") %></h1>
      <p class="mt-2 text-white/50">Create and track your proposals</p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to proposal_templates_path, class: "inline-flex items-center gap-2 px-4 py-3 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"/>
        </svg>
        <%= t("nav.templates") %>
      <% end %>
      <%= link_to new_proposal_path, class: "inline-flex items-center gap-2 px-5 py-3 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("proposals.new_proposal") %>
      <% end %>
    </div>
  </div>

  <% if @proposals.any? %>
    <!-- Proposal Cards -->
    <div data-controller="expandable-list" data-expandable-list-initial-limit-value="10">
      <div class="space-y-3" data-expandable-list-target="container">
        <% @proposals.each_with_index do |proposal, index| %>
          <div data-expandable-list-target="item" class="<%= 'hidden' if @pagy.page == 1 && index >= 10 %>">
            <%= link_to proposal, class: "group block" do %>
              <div class="bg-white/5 border border-white/10 rounded-2xl p-5 hover:bg-white/10 hover:border-white/20 transition-all duration-200">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class="text-lg font-semibold text-white group-hover:text-emerald-400 transition-colors truncate"><%= proposal.title %></h3>
                      <%= render "proposals/status_badge", proposal: proposal %>
                    </div>
                    <div class="flex items-center gap-3">
                      <% if proposal.client %>
                        <span class="text-sm text-white/50"><%= proposal.client.name %></span>
                        <span class="text-white/20">&middot;</span>
                      <% end %>
                      <span class="text-sm text-white/40"><%= proposal.created_at.strftime("%b %d, %Y") %></span>
                    </div>
                  </div>

                  <!-- Amount & Arrow -->
                  <div class="flex items-center gap-6 ml-6">
                    <div class="text-right">
                      <p class="text-xs text-white/40 uppercase tracking-wide">Amount</p>
                      <p class="text-xl font-bold text-white"><%= number_to_currency(proposal.total_amount) %></p>
                    </div>
                    <svg class="w-5 h-5 text-white/30 group-hover:text-white/60 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
                    </svg>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Show More Button (only on first page when there are more than 10 items) -->
      <% if @pagy.page == 1 && @proposals.size > 10 %>
        <div class="mt-6 text-center" data-expandable-list-target="showMoreButton">
          <button type="button"
                  data-action="expandable-list#expand"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
            </svg>
            <%= t("pagination.show_more", default: "Show more") %>
            <span class="text-white/50">(<%= [@proposals.size - 10, 10].min %> more)</span>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <%= render "shared/pagination", pagy: @pagy %>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-16 text-center">
      <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2"><%= t("proposals.no_proposals") %></h3>
      <p class="text-white/50 mb-8 max-w-sm mx-auto"><%= t("proposals.no_proposals_description") %></p>
      <%= link_to new_proposal_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("proposals.create_first") %>
      <% end %>
    </div>
  <% end %>
</div>
