<div class="min-h-[60vh] flex items-center justify-center">
  <div class="max-w-md w-full text-center">
    <div class="bg-white/5 border border-white/10 rounded-2xl p-8">
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-amber-400/20 mb-6">
        <svg class="h-8 w-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>

      <h1 class="text-2xl font-bold text-white mb-2"><%= t("public_proposals.expired_title") %></h1>
      <p class="text-white/60 mb-6"><%= t("public_proposals.expired_message") %></p>

      <% if @proposal&.user&.email.present? %>
        <p class="text-sm text-white/50 mb-2"><%= t("public_proposals.contact_sender") %></p>
        <a href="mailto:<%= @proposal.user.email %>" class="text-emerald-400 hover:text-emerald-300 font-medium transition-colors">
          <%= @proposal.user.email %>
        </a>
      <% end %>
    </div>
  </div>
</div>
