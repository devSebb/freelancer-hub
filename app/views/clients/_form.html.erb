<%= form_with model: client, class: "space-y-6" do |f| %>
  <% if client.errors.any? %>
    <div class="bg-red-400/10 border border-red-400/20 rounded-xl p-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <ul class="text-sm text-red-400 space-y-1">
          <% client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
    <h2 class="text-lg font-semibold text-white mb-6"><%= t("clients.contact_info") %></h2>

    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <%= f.label :name, t("clients.name"), class: "block text-sm font-medium text-white/70 mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors", required: true, placeholder: "John Doe" %>
      </div>

      <div>
        <%= f.label :email, t("clients.email"), class: "block text-sm font-medium text-white/70 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors", required: true, placeholder: "john@example.com" %>
      </div>

      <div>
        <%= f.label :phone, t("clients.phone"), class: "block text-sm font-medium text-white/70 mb-2" %>
        <%= f.phone_field :phone, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors", placeholder: "+1 555 123 4567" %>
      </div>

      <div class="sm:col-span-2">
        <%= f.label :company, t("clients.company"), class: "block text-sm font-medium text-white/70 mb-2" %>
        <%= f.text_field :company, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors", placeholder: "Acme Inc." %>
      </div>
    </div>
  </div>

  <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
    <h2 class="text-lg font-semibold text-white"><%= t("clients.language") %></h2>
    <p class="mt-1 text-sm text-white/50"><%= t("clients.language_description") %></p>

    <div class="mt-4">
      <%= f.select :language,
          Client.languages.keys.map { |lang| [t("settings.languages.#{lang}"), lang] },
          {},
          class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
    </div>
  </div>

  <div class="flex justify-end gap-3 pt-4">
    <%= link_to t("common.cancel"), clients_path, class: "px-5 py-2.5 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200" %>
    <%= f.submit class: "px-6 py-2.5 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>
