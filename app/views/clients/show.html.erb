<div>
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to clients_path, class: "inline-flex items-center text-sm text-white/50 hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/>
      </svg>
      <%= t("common.back") %>
    <% end %>
  </div>

  <!-- Header -->
  <div class="flex items-start justify-between mb-10">
    <div class="flex items-center gap-5">
      <div class="w-16 h-16 bg-emerald-400 rounded-full flex items-center justify-center flex-shrink-0">
        <span class="text-2xl font-bold text-black"><%= @client.name.first.upcase %></span>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-white tracking-tight"><%= @client.name %></h1>
        <% if @client.company.present? %>
          <p class="text-white/50 mt-1"><%= @client.company %></p>
        <% end %>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to edit_client_path(@client), class: "inline-flex items-center gap-2 px-4 py-2.5 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
        </svg>
        <%= t("common.edit") %>
      <% end %>
      <%= button_to client_path(@client), method: :delete,
          data: { turbo_confirm: t("clients.confirm_delete") },
          class: "inline-flex items-center gap-2 px-4 py-2.5 bg-red-400/20 text-red-400 text-sm font-medium rounded-full hover:bg-red-400/30 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
        </svg>
        <%= t("common.delete") %>
      <% end %>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-white/5 border border-white/10 rounded-2xl p-6 mb-6">
    <h2 class="text-lg font-semibold text-white mb-5"><%= t("clients.contact_info") %></h2>
    <dl class="grid grid-cols-1 gap-5 sm:grid-cols-2">
      <div>
        <dt class="text-sm text-white/40"><%= t("clients.email") %></dt>
        <dd class="mt-1 text-white">
          <%= mail_to @client.email, @client.email, class: "text-emerald-400 hover:text-emerald-300 transition-colors" %>
        </dd>
      </div>
      <div>
        <dt class="text-sm text-white/40"><%= t("clients.phone") %></dt>
        <dd class="mt-1 text-white"><%= @client.phone.presence || "—" %></dd>
      </div>
      <div>
        <dt class="text-sm text-white/40"><%= t("clients.company") %></dt>
        <dd class="mt-1 text-white"><%= @client.company.presence || "—" %></dd>
      </div>
      <div>
        <dt class="text-sm text-white/40"><%= t("clients.language") %></dt>
        <dd class="mt-1 text-white"><%= t("settings.languages.#{@client.language}") %></dd>
      </div>
    </dl>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 mb-6">
    <div class="bg-white/5 border border-white/10 rounded-2xl p-5">
      <div class="flex items-center justify-between">
        <span class="text-sm text-white/50"><%= t("clients.proposals_count") %></span>
        <span class="text-2xl font-bold text-white"><%= @client.proposals.count %></span>
      </div>
    </div>
    <div class="bg-white/5 border border-white/10 rounded-2xl p-5">
      <div class="flex items-center justify-between">
        <span class="text-sm text-white/50"><%= t("clients.invoices_count") %></span>
        <span class="text-2xl font-bold text-white"><%= @client.invoices.count %></span>
      </div>
    </div>
  </div>

  <!-- Proposals -->
  <% if @client.proposals.any? %>
    <div class="bg-white/5 border border-white/10 rounded-2xl p-6 mb-6">
      <div class="flex items-center justify-between mb-5">
        <h2 class="text-lg font-semibold text-white"><%= t("clients.proposals_count") %></h2>
        <%= link_to new_proposal_path(client_id: @client.id), class: "inline-flex items-center gap-2 px-3 py-1.5 bg-white/10 text-white text-xs font-medium rounded-full hover:bg-white/20 transition-all duration-200" do %>
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
          </svg>
          <%= t("common.add_new") %>
        <% end %>
      </div>
      <div class="space-y-3">
        <% @client.proposals.order(created_at: :desc).each do |proposal| %>
          <%= link_to proposal, class: "group block" do %>
            <div class="flex items-center justify-between p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-all duration-200">
              <div>
                <p class="font-medium text-white group-hover:text-emerald-400 transition-colors"><%= proposal.title %></p>
                <p class="text-xs text-white/40 mt-1">
                  <%= proposal.created_at.strftime("%b %d, %Y") %>
                  <span class="text-white/20 mx-1">&middot;</span>
                  <%= number_to_currency(proposal.total_amount) %>
                </p>
              </div>
              <%= render "proposals/status_badge", proposal: proposal %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Invoices -->
  <% if @client.invoices.any? %>
    <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
      <div class="flex items-center justify-between mb-5">
        <h2 class="text-lg font-semibold text-white"><%= t("clients.invoices_count") %></h2>
        <%= link_to new_invoice_path(client_id: @client.id), class: "inline-flex items-center gap-2 px-3 py-1.5 bg-white/10 text-white text-xs font-medium rounded-full hover:bg-white/20 transition-all duration-200" do %>
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
          </svg>
          <%= t("common.add_new") %>
        <% end %>
      </div>
      <div class="space-y-3">
        <% @client.invoices.order(created_at: :desc).each do |invoice| %>
          <%= link_to invoice, class: "group block" do %>
            <div class="flex items-center justify-between p-4 bg-white/5 rounded-xl hover:bg-white/10 transition-all duration-200">
              <div>
                <p class="font-medium text-white group-hover:text-emerald-400 transition-colors"><%= invoice.invoice_number %></p>
                <p class="text-xs text-white/40 mt-1">
                  <%= invoice.created_at.strftime("%b %d, %Y") %>
                  <span class="text-white/20 mx-1">&middot;</span>
                  <%= number_to_currency(invoice.total) %>
                </p>
              </div>
              <%= render "invoices/status_badge", invoice: invoice %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
