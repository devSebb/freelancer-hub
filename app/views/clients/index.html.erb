<div>
  <!-- Page Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="text-4xl font-bold text-white tracking-tight"><%= t("clients.title") %></h1>
      <p class="mt-2 text-white/50">Manage your client relationships</p>
    </div>
    <%= link_to new_client_path, class: "inline-flex items-center gap-2 px-5 py-3 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
      <%= icon(:new, size: :sm) %>
      <%= t("clients.new_client") %>
    <% end %>
  </div>

  <% if @clients.any? %>
    <!-- Client Cards -->
    <div data-controller="expandable-list" data-expandable-list-initial-limit-value="10">
      <div class="space-y-3" data-expandable-list-target="container">
        <% @clients.each_with_index do |client, index| %>
          <div data-expandable-list-target="item" class="<%= 'hidden' if @pagy.page == 1 && index >= 10 %>">
            <%= link_to client, class: "group block" do %>
              <div class="bg-white/5 border border-white/10 rounded-2xl p-5 hover:bg-white/10 hover:border-white/20 transition-all duration-200">
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <!-- Avatar -->
                    <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center flex-shrink-0">
                      <span class="text-lg font-bold text-black"><%= client.name.first.upcase %></span>
                    </div>

                    <!-- Info -->
                    <div>
                      <h3 class="text-lg font-semibold text-white group-hover:text-accent transition-colors"><%= client.name %></h3>
                      <div class="flex items-center gap-3 mt-1">
                        <span class="text-sm text-white/50"><%= client.email %></span>
                        <% if client.company.present? %>
                          <span class="text-white/20">&middot;</span>
                          <span class="text-sm text-white/50"><%= client.company %></span>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <!-- Stats & Arrow -->
                  <div class="flex items-center gap-6">
                    <div class="hidden sm:flex items-center gap-6">
                      <div class="text-right">
                        <p class="text-xs text-white/40 uppercase tracking-wide">Proposals</p>
                        <p class="text-lg font-semibold text-white"><%= client.proposals.count %></p>
                      </div>
                      <div class="text-right">
                        <p class="text-xs text-white/40 uppercase tracking-wide">Invoices</p>
                        <p class="text-lg font-semibold text-white"><%= client.invoices.count %></p>
                      </div>
                    </div>
                    <%= icon(:chevron_right, size: :sm, css_class: "text-white/30 group-hover:text-white/60 group-hover:translate-x-1 transition-all") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Show More Button (only on first page when there are more than 10 items) -->
      <% if @pagy.page == 1 && @clients.size > 10 %>
        <div class="mt-6 text-center" data-expandable-list-target="showMoreButton">
          <button type="button"
                  data-action="expandable-list#expand"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200">
            <%= icon(:chevron_down, size: :sm) %>
            <%= t("pagination.show_more", default: "Show more") %>
            <span class="text-white/50">(<%= [@clients.size - 10, 10].min %> more)</span>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <%= render "shared/pagination", pagy: @pagy %>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-16 text-center">
      <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
        <%= icon(:clients_empty, variant: :duotone, size: :xl, css_class: "text-white/40") %>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2"><%= t("clients.no_clients") %></h3>
      <p class="text-white/50 mb-8 max-w-sm mx-auto"><%= t("clients.no_clients_description") %></p>
      <%= link_to new_client_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
        <%= icon(:new, size: :sm) %>
        <%= t("clients.add_first_client") %>
      <% end %>
    </div>
  <% end %>
</div>
