<div class="min-h-screen bg-black">
  <!-- Top Navigation Bar -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-xl border-b border-white/10">
    <div class="max-w-7xl mx-auto px-6">
      <div class="h-24 flex items-center justify-between">
        <!-- Logo -->
        <%= link_to dashboard_path, class: "flex items-center gap-1.5 hover:opacity-90 transition-opacity" do %>
          <span class="font-special text-accent text-4xl">B</span>
          <span class="text-white text-2xl font-semibold tracking-tight hidden sm:inline">illdeck</span>
        <% end %>

        <!-- Center Navigation Pills -->
        <nav class="flex items-center gap-2">
          <%= link_to clients_path, class: "group flex items-center gap-2.5 px-6 py-3 rounded-full transition-all duration-200 focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-black #{nav_pill_classes(%w[/clients])}" do %>
            <%= icon(:clients, variant: :duotone, size: :sm) %>
            <span class="text-base font-medium"><%= t("nav.clients") %></span>
          <% end %>

          <%= link_to proposals_path, class: "group flex items-center gap-2.5 px-6 py-3 rounded-full transition-all duration-200 focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-black #{nav_pill_classes(%w[/proposals /proposal_templates])}" do %>
            <%= icon(:proposals, variant: :duotone, size: :sm) %>
            <span class="text-base font-medium"><%= t("nav.proposals") %></span>
          <% end %>

          <%= link_to invoices_path, class: "group flex items-center gap-2.5 px-6 py-3 rounded-full transition-all duration-200 focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-black #{nav_pill_classes(%w[/invoices])}" do %>
            <%= icon(:invoices, variant: :duotone, size: :sm) %>
            <span class="text-base font-medium"><%= t("nav.invoices") %></span>
          <% end %>
        </nav>

        <!-- Right Icons -->
        <div class="flex items-center gap-3">
          <!-- Settings -->
          <%= link_to settings_path, class: "w-10 h-10 flex items-center justify-center rounded-full transition-all duration-200 focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-black #{nav_pill_classes([], current_page: settings_path)}", title: t("nav.settings") do %>
            <%= icon(:settings, variant: :duotone) %>
          <% end %>

          <!-- Profile -->
          <%= link_to dashboard_path, class: "w-10 h-10 flex items-center justify-center rounded-full bg-accent text-black font-semibold text-sm hover:bg-accent-light transition-all duration-200", title: current_user.name || current_user.email do %>
            <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
          <% end %>

          <!-- Sign Out -->
          <%= button_to destroy_user_session_path, method: :delete, class: "w-10 h-10 flex items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 transition-all duration-200", title: t("nav.sign_out"), aria: { label: t("nav.sign_out") } do %>
            <%= icon(:sign_out) %>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="pt-32 pb-12">
    <!-- Flash messages -->
    <% if notice.present? %>
      <div class="max-w-5xl mx-auto px-6 mb-6">
        <div class="bg-accent/10 border border-accent/20 rounded-xl px-5 py-4">
          <p class="text-sm text-accent font-medium"><%= notice %></p>
        </div>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="max-w-5xl mx-auto px-6 mb-6">
        <div class="bg-red-400/10 border border-red-400/20 rounded-xl px-5 py-4">
          <p class="text-sm text-red-400 font-medium"><%= alert %></p>
        </div>
      </div>
    <% end %>

    <!-- Page content -->
    <div class="max-w-5xl mx-auto px-6">
      <%= yield %>
    </div>
  </main>
</div>
