<div class="min-h-screen bg-black">
  <!-- Top Navigation Bar -->
  <header class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-xl border-b border-white/10">
    <div class="max-w-7xl mx-auto px-6">
      <div class="h-16 flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center">
          <% if current_user.logo.attached? %>
            <%= image_tag current_user.logo.variant(resize_to_limit: [120, 40]), class: "h-8 max-w-[120px] object-contain" %>
          <% else %>
            <span class="text-lg font-bold text-white tracking-tight"><%= t("app_name") %></span>
          <% end %>
        </div>

        <!-- Center Navigation Pills -->
        <nav class="flex items-center gap-2">
          <%= link_to clients_path, class: "group flex items-center gap-2 px-4 py-2 rounded-full transition-all duration-200 #{request.path.start_with?('/clients') ? 'bg-white text-black' : 'bg-white/10 text-white hover:bg-white/20'}" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
            </svg>
            <span class="text-sm font-medium"><%= t("nav.clients") %></span>
          <% end %>

          <%= link_to proposals_path, class: "group flex items-center gap-2 px-4 py-2 rounded-full transition-all duration-200 #{request.path.start_with?('/proposals') || request.path.start_with?('/proposal_templates') ? 'bg-white text-black' : 'bg-white/10 text-white hover:bg-white/20'}" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"/>
            </svg>
            <span class="text-sm font-medium"><%= t("nav.proposals") %></span>
          <% end %>

          <%= link_to invoices_path, class: "group flex items-center gap-2 px-4 py-2 rounded-full transition-all duration-200 #{request.path.start_with?('/invoices') ? 'bg-white text-black' : 'bg-white/10 text-white hover:bg-white/20'}" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z"/>
            </svg>
            <span class="text-sm font-medium"><%= t("nav.invoices") %></span>
          <% end %>
        </nav>

        <!-- Right Icons -->
        <div class="flex items-center gap-3">
          <!-- Theme Toggle -->
          <div data-controller="theme">
            <button type="button" data-action="click->theme#toggle" class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 transition-all duration-200" title="<%= t('nav.toggle_theme') %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" data-theme-target="icon">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"/>
              </svg>
            </button>
          </div>

          <!-- Settings -->
          <%= link_to settings_path, class: "w-10 h-10 flex items-center justify-center rounded-full transition-all duration-200 #{current_page?(settings_path) ? 'bg-white text-black' : 'bg-white/10 text-white hover:bg-white/20'}", title: t("nav.settings") do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"/>
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          <% end %>

          <!-- Profile -->
          <%= link_to dashboard_path, class: "w-10 h-10 flex items-center justify-center rounded-full bg-emerald-400 text-black font-semibold text-sm hover:bg-emerald-300 transition-all duration-200", title: current_user.name || current_user.email do %>
            <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
          <% end %>

          <!-- Sign Out -->
          <%= button_to destroy_user_session_path, method: :delete, class: "w-10 h-10 flex items-center justify-center rounded-full bg-white/10 text-white hover:bg-white/20 transition-all duration-200", title: t("nav.sign_out") do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="pt-24 pb-12">
    <!-- Flash messages -->
    <% if notice.present? %>
      <div class="max-w-5xl mx-auto px-6 mb-6">
        <div class="bg-emerald-400/10 border border-emerald-400/20 rounded-xl px-5 py-4">
          <p class="text-sm text-emerald-400 font-medium"><%= notice %></p>
        </div>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="max-w-5xl mx-auto px-6 mb-6">
        <div class="bg-red-400/10 border border-red-400/20 rounded-xl px-5 py-4">
          <p class="text-sm text-red-400 font-medium"><%= alert %></p>
        </div>
      </div>
    <% end %>

    <!-- Page content -->
    <div class="max-w-5xl mx-auto px-6">
      <%= yield %>
    </div>
  </main>
</div>
