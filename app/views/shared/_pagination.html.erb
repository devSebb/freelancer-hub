<%# Pagination component for dark theme %>
<%# Usage: render "shared/pagination", pagy: @pagy %>

<% if pagy.pages > 1 %>
  <nav class="flex items-center justify-center gap-1 mt-8" aria-label="Pagination">
    <%# Previous button %>
    <% if pagy.prev %>
      <%= link_to pagy_url_for(pagy, pagy.prev), class: "inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/5 border border-white/10 text-white/60 hover:bg-white/10 hover:text-white transition-all duration-200", aria: { label: t("pagination.previous", default: "Previous") } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/>
        </svg>
      <% end %>
    <% else %>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/5 border border-white/5 text-white/20 cursor-not-allowed">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/>
        </svg>
      </span>
    <% end %>

    <%# Page numbers %>
    <div class="flex items-center gap-1 mx-2">
      <% pagy.series.each do |item| %>
        <% if item.is_a?(Integer) %>
          <% if item == pagy.page %>
            <span class="inline-flex items-center justify-center min-w-[2.5rem] h-10 px-3 rounded-full bg-white text-black text-sm font-semibold">
              <%= item %>
            </span>
          <% else %>
            <%= link_to item, pagy_url_for(pagy, item), class: "inline-flex items-center justify-center min-w-[2.5rem] h-10 px-3 rounded-full bg-white/5 border border-white/10 text-white/60 text-sm font-medium hover:bg-white/10 hover:text-white transition-all duration-200" %>
          <% end %>
        <% elsif item == :gap %>
          <span class="inline-flex items-center justify-center w-10 h-10 text-white/30 text-sm">
            &hellip;
          </span>
        <% end %>
      <% end %>
    </div>

    <%# Next button %>
    <% if pagy.next %>
      <%= link_to pagy_url_for(pagy, pagy.next), class: "inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/5 border border-white/10 text-white/60 hover:bg-white/10 hover:text-white transition-all duration-200", aria: { label: t("pagination.next", default: "Next") } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
        </svg>
      <% end %>
    <% else %>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/5 border border-white/5 text-white/20 cursor-not-allowed">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
        </svg>
      </span>
    <% end %>
  </nav>

  <%# Page info %>
  <p class="text-center text-sm text-white/40 mt-4">
    <%= t("pagination.showing", default: "Showing %{from}-%{to} of %{count}", from: pagy.from, to: pagy.to, count: pagy.count) %>
  </p>
<% end %>
