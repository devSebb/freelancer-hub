<%
  status_classes = {
    "draft" => "bg-white/10 text-white/60",
    "sent" => "bg-blue-400/20 text-blue-400",
    "partially_paid" => "bg-amber-400/20 text-amber-400",
    "paid" => "bg-accent/20 text-accent",
    "overdue" => "bg-red-400/20 text-red-400"
  }
%>
<span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= status_classes[invoice.status] %>">
  <%= t("invoices.statuses.#{invoice.status}") %>
</span>
