<div>
  <!-- Page Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="text-4xl font-bold text-white tracking-tight"><%= t("invoices.title") %></h1>
      <p class="mt-2 text-white/50">Track payments and manage billing</p>
    </div>
    <%= link_to new_invoice_path, class: "inline-flex items-center gap-2 px-5 py-3 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      <%= t("invoices.new_invoice") %>
    <% end %>
  </div>

  <% if @invoices.any? %>
    <!-- Invoice Cards -->
    <div data-controller="expandable-list" data-expandable-list-initial-limit-value="10">
      <div class="space-y-3" data-expandable-list-target="container">
        <% @invoices.each_with_index do |invoice, index| %>
          <div data-expandable-list-target="item" class="<%= 'hidden' if @pagy.page == 1 && index >= 10 %>">
            <%= link_to invoice, class: "group block" do %>
              <div class="bg-white/5 border border-white/10 rounded-2xl p-5 hover:bg-white/10 hover:border-white/20 transition-all duration-200">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class="text-lg font-semibold text-white group-hover:text-emerald-400 transition-colors"><%= invoice.invoice_number %></h3>
                      <%= render "invoices/status_badge", invoice: invoice %>
                    </div>
                    <div class="flex items-center gap-3">
                      <% if invoice.client %>
                        <span class="text-sm text-white/50"><%= invoice.client.name %></span>
                        <span class="text-white/20">&middot;</span>
                      <% end %>
                      <% if invoice.due_date %>
                        <span class="text-sm text-white/40">Due <%= invoice.due_date.strftime("%b %d, %Y") %></span>
                      <% else %>
                        <span class="text-sm text-white/40">No due date</span>
                      <% end %>
                    </div>
                  </div>

                  <!-- Amount & Arrow -->
                  <div class="flex items-center gap-6 ml-6">
                    <div class="text-right">
                      <p class="text-xs text-white/40 uppercase tracking-wide">Total</p>
                      <p class="text-xl font-bold text-white"><%= number_to_currency(invoice.total) %></p>
                    </div>
                    <svg class="w-5 h-5 text-white/30 group-hover:text-white/60 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
                    </svg>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Show More Button (only on first page when there are more than 10 items) -->
      <% if @pagy.page == 1 && @invoices.size > 10 %>
        <div class="mt-6 text-center" data-expandable-list-target="showMoreButton">
          <button type="button"
                  data-action="expandable-list#expand"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
            </svg>
            <%= t("pagination.show_more", default: "Show more") %>
            <span class="text-white/50">(<%= [@invoices.size - 10, 10].min %> more)</span>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <%= render "shared/pagination", pagy: @pagy %>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white/5 border border-white/10 rounded-2xl p-16 text-center">
      <div class="w-16 h-16 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2"><%= t("invoices.no_invoices") %></h3>
      <p class="text-white/50 mb-8 max-w-sm mx-auto"><%= t("invoices.no_invoices_description") %></p>
      <%= link_to new_invoice_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("invoices.create_first") %>
      <% end %>
    </div>
  <% end %>
</div>
