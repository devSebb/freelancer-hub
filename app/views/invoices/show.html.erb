<div>
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to invoices_path, class: "inline-flex items-center text-sm text-white/50 hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"/>
      </svg>
      <%= t("common.back") %>
    <% end %>
  </div>

  <!-- Header -->
  <div class="flex items-start justify-between mb-8">
    <div>
      <div class="flex items-center gap-3 mb-2">
        <h1 class="text-3xl font-bold text-white tracking-tight"><%= @invoice.invoice_number %></h1>
        <%= render "invoices/status_badge", invoice: @invoice %>
      </div>
      <% if @invoice.client %>
        <p class="text-white/50">
          <%= t("invoices.client") %>:
          <%= link_to @invoice.client.name, @invoice.client, class: "text-emerald-400 hover:text-emerald-300 transition-colors" %>
        </p>
      <% end %>
    </div>

    <div class="flex items-center gap-3">
      <% if @invoice.draft? %>
        <%= link_to edit_invoice_path(@invoice), class: "inline-flex items-center gap-2 px-4 py-2.5 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
          </svg>
          <%= t("common.edit") %>
        <% end %>

        <% if @invoice.client.present? && @invoice.invoice_items.any? %>
          <%= button_to send_invoice_invoice_path(@invoice), method: :post, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-white text-black text-sm font-semibold rounded-full hover:bg-white/90 transition-all duration-200" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"/>
            </svg>
            <%= t("invoices.send_invoice") %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to public_invoice_url(@invoice.share_token), target: "_blank", class: "inline-flex items-center gap-2 px-4 py-2.5 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"/>
          </svg>
          <%= t("invoices.view_public") %>
        <% end %>
      <% end %>

      <!-- Export PDF dropdown -->
      <div class="relative" data-controller="dropdown">
        <button type="button" data-action="click->dropdown#toggle" class="inline-flex items-center gap-2 px-4 py-2.5 bg-white/10 text-white text-sm font-medium rounded-full hover:bg-white/20 transition-all duration-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"/>
          </svg>
          <%= t("common.export_pdf") %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-40 bg-zinc-900 border border-white/10 rounded-xl shadow-xl z-10 overflow-hidden">
          <%= link_to export_pdf_invoice_path(@invoice, style: "modern"), class: "block px-4 py-2.5 text-sm text-white hover:bg-white/10 transition-colors", data: { turbo: false } do %>
            <%= t("pdf.templates.modern") %>
          <% end %>
          <%= link_to export_pdf_invoice_path(@invoice, style: "classic"), class: "block px-4 py-2.5 text-sm text-white hover:bg-white/10 transition-colors", data: { turbo: false } do %>
            <%= t("pdf.templates.classic") %>
          <% end %>
          <%= link_to export_pdf_invoice_path(@invoice, style: "minimal"), class: "block px-4 py-2.5 text-sm text-white hover:bg-white/10 transition-colors", data: { turbo: false } do %>
            <%= t("pdf.templates.minimal") %>
          <% end %>
        </div>
      </div>

      <%= button_to invoice_path(@invoice), method: :delete,
          data: { turbo_confirm: t("invoices.confirm_delete") },
          class: "inline-flex items-center gap-2 px-4 py-2.5 bg-red-400/20 text-red-400 text-sm font-medium rounded-full hover:bg-red-400/30 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
        </svg>
        <%= t("common.delete") %>
      <% end %>
    </div>
  </div>

  <!-- Invoice Content -->
  <div class="space-y-6">
    <!-- Line Items -->
    <div class="bg-white/5 border border-white/10 rounded-2xl overflow-hidden">
      <table class="min-w-full">
        <thead>
          <tr class="border-b border-white/10">
            <th class="px-6 py-4 text-left text-xs font-medium text-white/50 uppercase tracking-wider"><%= t("invoices.description") %></th>
            <th class="px-6 py-4 text-right text-xs font-medium text-white/50 uppercase tracking-wider"><%= t("invoices.quantity") %></th>
            <th class="px-6 py-4 text-right text-xs font-medium text-white/50 uppercase tracking-wider"><%= t("invoices.rate") %></th>
            <th class="px-6 py-4 text-right text-xs font-medium text-white/50 uppercase tracking-wider"><%= t("invoices.amount") %></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% @invoice.invoice_items.each do |item| %>
            <tr>
              <td class="px-6 py-4 text-sm text-white"><%= item.description %></td>
              <td class="px-6 py-4 text-sm text-white/70 text-right"><%= number_with_precision(item.quantity, precision: 2) %></td>
              <td class="px-6 py-4 text-sm text-white/70 text-right"><%= number_to_currency(item.rate) %></td>
              <td class="px-6 py-4 text-sm text-white text-right"><%= number_to_currency(item.amount) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="border-t border-white/10 bg-white/5">
          <tr>
            <td colspan="3" class="px-6 py-3 text-sm text-white/70 text-right"><%= t("invoices.subtotal") %></td>
            <td class="px-6 py-3 text-sm text-white text-right"><%= number_to_currency(@invoice.subtotal) %></td>
          </tr>
          <% if @invoice.discount_amount > 0 %>
            <tr>
              <td colspan="3" class="px-6 py-3 text-sm text-white/50 text-right">
                <%= t("invoices.discount") %>
                <% if @invoice.discount_percent? %>
                  (<%= number_with_precision(@invoice.discount_value, precision: 0) %>%)
                <% end %>
              </td>
              <td class="px-6 py-3 text-sm text-red-400 text-right">-<%= number_to_currency(@invoice.discount_amount) %></td>
            </tr>
          <% end %>
          <tr class="border-t border-white/20">
            <td colspan="3" class="px-6 py-4 text-base font-bold text-white text-right"><%= t("invoices.total") %></td>
            <td class="px-6 py-4 text-base font-bold text-white text-right"><%= number_to_currency(@invoice.total) %></td>
          </tr>
          <% if @invoice.has_deposit? %>
            <tr>
              <td colspan="3" class="px-6 py-3 text-sm text-white/50 text-right">
                <%= t("invoices.deposit") %> (<%= number_with_precision(@invoice.deposit_percent, precision: 0) %>%)
              </td>
              <td class="px-6 py-3 text-sm text-white text-right"><%= number_to_currency(@invoice.deposit_amount) %></td>
            </tr>
            <tr>
              <td colspan="3" class="px-6 py-3 text-sm text-white/50 text-right"><%= t("invoices.balance_due") %></td>
              <td class="px-6 py-3 text-sm text-white text-right"><%= number_to_currency(@invoice.final_amount) %></td>
            </tr>
          <% end %>
        </tfoot>
      </table>
    </div>

    <!-- Details -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4"><%= t("invoices.details") %></h2>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-sm text-white/50"><%= t("invoices.due_date") %></dt>
            <dd class="text-sm text-white"><%= @invoice.due_date&.strftime("%b %d, %Y") || "â€”" %></dd>
          </div>
          <% if @invoice.proposal %>
            <div class="flex justify-between">
              <dt class="text-sm text-white/50"><%= t("invoices.proposal") %></dt>
              <dd class="text-sm">
                <%= link_to @invoice.proposal.title, @invoice.proposal, class: "text-emerald-400 hover:text-emerald-300 transition-colors" %>
              </dd>
            </div>
          <% end %>
          <% unless @invoice.draft? %>
            <div class="flex justify-between">
              <dt class="text-sm text-white/50"><%= t("invoices.sent_at") %></dt>
              <dd class="text-sm text-white"><%= @invoice.sent_at&.strftime("%b %d, %Y") %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <% if @invoice.tax_notes.present? || @invoice.notes.present? %>
        <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
          <% if @invoice.tax_notes.present? %>
            <div class="mb-4">
              <h3 class="text-sm font-medium text-white/70"><%= t("invoices.tax_notes") %></h3>
              <p class="mt-1 text-sm text-white/50"><%= @invoice.tax_notes %></p>
            </div>
          <% end %>
          <% if @invoice.notes.present? %>
            <div>
              <h3 class="text-sm font-medium text-white/70"><%= t("invoices.notes") %></h3>
              <div class="mt-1 text-sm text-white/50"><%= simple_format(@invoice.notes) %></div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Payment Methods -->
    <% if @invoice.has_payment_methods? %>
      <div class="bg-white/5 border border-white/10 rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-white mb-4"><%= t("invoices.payment_methods.title") %></h2>
        <%= render "invoices/payment_methods_display", invoice: @invoice %>
      </div>
    <% end %>
  </div>
</div>
