<h2 class="text-3xl font-bold text-white mb-2"><%= t("auth.forgot_password") %></h2>
<p class="text-white/50 mb-8">Enter your email and we'll send you reset instructions.</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-5") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email, t("auth.email"), class: "block text-sm font-medium text-white/70 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
  </div>

  <div class="pt-2">
    <%= f.submit t("auth.send_reset_instructions"), class: "w-full py-3 px-4 bg-white text-black font-semibold rounded-full hover:bg-white/90 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>

<p class="mt-8 text-center text-sm text-white/50">
  Remember your password?
  <%= link_to t("auth.sign_in"), new_session_path(resource_name), class: "text-emerald-400 hover:text-emerald-300 font-medium transition-colors" %>
</p>
