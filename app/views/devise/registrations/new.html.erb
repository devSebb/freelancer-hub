<h2 class="text-3xl font-bold text-white mb-2"><%= t("auth.sign_up") %></h2>
<p class="text-white/50 mb-8">Create your account to get started.</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-5") do |f| %>
  <% if resource.errors.any? %>
    <div class="bg-red-400/10 border border-red-400/20 rounded-xl p-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <ul class="text-sm text-red-400 space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :email, t("auth.email"), class: "block text-sm font-medium text-white/70 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
  </div>

  <div>
    <%= f.label :password, t("auth.password"), class: "block text-sm font-medium text-white/70 mb-2" %>
    <% if @minimum_password_length %>
      <p class="text-xs text-white/40 mb-2"><%= @minimum_password_length %> characters minimum</p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
  </div>

  <div>
    <%= f.label :password_confirmation, t("auth.password_confirmation"), class: "block text-sm font-medium text-white/70 mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
  </div>

  <div class="pt-2">
    <%= f.submit t("auth.create_account"), class: "w-full py-3 px-4 bg-white text-black font-semibold rounded-full hover:bg-white/90 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>

<p class="mt-8 text-center text-sm text-white/50">
  <%= t("auth.have_account") %>
  <%= link_to t("auth.sign_in"), new_session_path(resource_name), class: "text-emerald-400 hover:text-emerald-300 font-medium transition-colors" %>
</p>
