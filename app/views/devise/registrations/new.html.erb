<div class="auth-fade-in">
  <h2 class="text-3xl font-bold text-white mb-2"><%= t("auth.sign_up") %></h2>
  <p class="text-white/40 mb-8">Create your account to get started.</p>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-5") do |f| %>
  <% if resource.errors.any? %>
    <div class="bg-red-400/10 border border-red-400/20 p-4 auth-fade-in" style="border-radius: 13px;">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <ul class="text-sm text-red-400 space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="auth-fade-in auth-fade-delay-1">
    <%= f.label :email, t("auth.email"), class: "block text-xs font-semibold text-white/50 uppercase tracking-wider mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input w-full px-4 py-3 bg-white/[0.03] border border-white/10 text-white placeholder-white/20 focus:outline-none transition-all duration-300", style: "border-radius: 13px;" %>
  </div>

  <div class="auth-fade-in auth-fade-delay-2">
    <%= f.label :password, t("auth.password"), class: "block text-xs font-semibold text-white/50 uppercase tracking-wider mb-2" %>
    <% if @minimum_password_length %>
      <p class="text-[11px] text-white/30 mb-2"><%= @minimum_password_length %> characters minimum</p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "auth-input w-full px-4 py-3 bg-white/[0.03] border border-white/10 text-white placeholder-white/20 focus:outline-none transition-all duration-300", style: "border-radius: 13px;" %>
  </div>

  <div class="auth-fade-in auth-fade-delay-3">
    <%= f.label :password_confirmation, t("auth.password_confirmation"), class: "block text-xs font-semibold text-white/50 uppercase tracking-wider mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input w-full px-4 py-3 bg-white/[0.03] border border-white/10 text-white placeholder-white/20 focus:outline-none transition-all duration-300", style: "border-radius: 13px;" %>
  </div>

  <div class="pt-2 auth-fade-in auth-fade-delay-4">
    <%= f.submit t("auth.create_account"), class: "auth-btn w-full py-3.5 px-4 text-black font-semibold hover:opacity-90 cursor-pointer", style: "background-color: #94F7AD; border-radius: 13px;" %>
  </div>
<% end %>

<p class="mt-8 text-center text-sm text-white/40 auth-fade-in auth-fade-delay-4">
  <%= t("auth.have_account") %>
  <%= link_to t("auth.sign_in"), new_session_path(resource_name), class: "font-semibold transition-colors duration-300 hover:opacity-80", style: "color: #94F7AD;" %>
</p>
