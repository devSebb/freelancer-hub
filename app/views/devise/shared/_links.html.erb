<div class="mt-6 space-y-2 text-center">
  <%- if controller_name != 'sessions' %>
    <p><%= link_to t("auth.sign_in"), new_session_path(resource_name), class: "text-sm font-medium transition-colors duration-300 hover:opacity-80", style: "color: #94F7AD;" %></p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p><%= link_to t("auth.sign_up"), new_registration_path(resource_name), class: "text-sm font-medium transition-colors duration-300 hover:opacity-80", style: "color: #94F7AD;" %></p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p><%= link_to t("auth.forgot_password"), new_password_path(resource_name), class: "text-sm text-white/40 hover:text-white/60 transition-colors duration-300" %></p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p><%= link_to t("auth.resend_confirmation"), new_confirmation_path(resource_name), class: "text-sm text-white/40 hover:text-white/60 transition-colors duration-300" %></p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p><%= link_to t("auth.resend_unlock"), new_unlock_path(resource_name), class: "text-sm text-white/40 hover:text-white/60 transition-colors duration-300" %></p>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <p><%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-sm font-medium transition-colors duration-300 hover:opacity-80", style: "color: #94F7AD;" %></p>
    <% end %>
  <% end %>
</div>
