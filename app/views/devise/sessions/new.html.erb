<h2 class="text-3xl font-bold text-white mb-2"><%= t("auth.sign_in") %></h2>
<p class="text-white/50 mb-8">Welcome back. Enter your credentials to continue.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-5") do |f| %>
  <div>
    <%= f.label :email, t("auth.email"), class: "block text-sm font-medium text-white/70 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
  </div>

  <div>
    <%= f.label :password, t("auth.password"), class: "block text-sm font-medium text-white/70 mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 focus:outline-none focus:border-white/30 focus:ring-0 transition-colors" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center justify-between">
      <label class="flex items-center gap-2 cursor-pointer">
        <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-white/20 bg-white/5 text-emerald-400 focus:ring-emerald-400/20 focus:ring-offset-0" %>
        <span class="text-sm text-white/50"><%= t("auth.remember_me") %></span>
      </label>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t("auth.forgot_password"), new_password_path(resource_name), class: "text-sm text-emerald-400 hover:text-emerald-300 transition-colors" %>
      <% end %>
    </div>
  <% end %>

  <div class="pt-2">
    <%= f.submit t("auth.sign_in"), class: "w-full py-3 px-4 bg-white text-black font-semibold rounded-full hover:bg-white/90 transition-all duration-200 cursor-pointer" %>
  </div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mt-8 text-center text-sm text-white/50">
    <%= t("auth.no_account") %>
    <%= link_to t("auth.sign_up"), new_registration_path(resource_name), class: "text-emerald-400 hover:text-emerald-300 font-medium transition-colors" %>
  </p>
<% end %>
