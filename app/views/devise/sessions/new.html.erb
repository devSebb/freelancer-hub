<div class="auth-fade-in">
  <h2 class="text-3xl font-bold text-white mb-2"><%= t("auth.sign_in") %></h2>
  <p class="text-white/40 mb-8">Welcome back. Enter your credentials to continue.</p>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-5") do |f| %>
  <div class="auth-fade-in auth-fade-delay-1">
    <%= f.label :email, t("auth.email"), class: "block text-xs font-semibold text-white/50 uppercase tracking-wider mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input w-full px-4 py-3 bg-white/[0.03] border border-white/10 rounded-xl text-white placeholder-white/20 focus:outline-none transition-all duration-300", style: "border-radius: 13px;" %>
  </div>

  <div class="auth-fade-in auth-fade-delay-2">
    <%= f.label :password, t("auth.password"), class: "block text-xs font-semibold text-white/50 uppercase tracking-wider mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "auth-input w-full px-4 py-3 bg-white/[0.03] border border-white/10 rounded-xl text-white placeholder-white/20 focus:outline-none transition-all duration-300", style: "border-radius: 13px;" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center justify-between auth-fade-in auth-fade-delay-3">
      <label class="flex items-center gap-2 cursor-pointer group">
        <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-white/20 bg-white/5 focus:ring-offset-0", style: "accent-color: #94F7AD;" %>
        <span class="text-sm text-white/40 group-hover:text-white/60 transition-colors"><%= t("auth.remember_me") %></span>
      </label>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t("auth.forgot_password"), new_password_path(resource_name), class: "text-sm font-medium transition-colors duration-300 hover:opacity-80", style: "color: #94F7AD;" %>
      <% end %>
    </div>
  <% end %>

  <div class="pt-2 auth-fade-in auth-fade-delay-3">
    <%= f.submit t("auth.sign_in"), class: "auth-btn w-full py-3.5 px-4 bg-accent text-black font-semibold hover:opacity-90 cursor-pointer", style: "background-color: #94F7AD; border-radius: 13px;" %>
  </div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mt-8 text-center text-sm text-white/40 auth-fade-in auth-fade-delay-4">
    <%= t("auth.no_account") %>
    <%= link_to t("auth.sign_up"), new_registration_path(resource_name), class: "font-semibold transition-colors duration-300 hover:opacity-80", style: "color: #94F7AD;" %>
  </p>
<% end %>
